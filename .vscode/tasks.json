    "version": "2.0.0",
    "tasks": [
        {
            "label": "build image",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/C",
                "${workspaceFolder}/build.cmd",
                "${relativeFile}", 
                "latest"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "build image test",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/C",
                "${workspaceFolder}/build.cmd",
                "${relativeFile}", 
                "test"
            ],
            "problemMatcher": []
        },
        {
            "label": "echo",
            "type": "shell",
            "command": "echo",
            "args": [
                "${workspaceFolder}/build.cmd",
                "${relativeFile}"
            ],
            "problemMatcher": []
        }
    ]
}